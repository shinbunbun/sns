    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug executable 'template'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
                    "--bin=template",
                    "--package=template"
                ],
                "filter": {
                    "name": "template",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "initCommands": [
                "settings set target.disable-aslr false"
            ]
        },
        {
            "name": "Debug unit tests in executable 'template'",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=template",
                    "--package=template"
                ],
                "filter": {
                    "name": "template",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "initCommands": [
                "settings set target.disable-aslr false"
            ]
        }
    ]
}
